<% @posts.each do |post| %>

<h3><%= post.title %></h3><br>
<%=post.description%><br>
<img src="/images/<%= post.image %>" /><br>

<%= link_to 'Show', post %>
<%= link_to 'Edit', edit_post_path(post) %>
<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you absolutely sure?'} %>
		  
<hr>

<% end %>
